@model TechJobsPersistent.ViewModels.AddEmployerViewModel

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessAddEmployerForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Employer Name</label>
        <input asp-for="Name" />
        <span class="error" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">Employer Location</label>
        <input asp-for="Location" />
        <span class="error" asp-validation-for="Location"></span>
    </div>
    <input type="submit" value="Add Employer" />
</form>
